// Enum for contract types
enum ContractType {
  ERC20
  ERC721
  ERC1155
  CUSTOM
  UNKNOWN
}

// Enum for detection source
enum DetectionSource {
  AUTO
  MANUAL
}

// Enum for dApp status
enum DAppStatus {
  ACTIVE
  DORMANT
  INACTIVE
}

// Main dApps table
model DApp {
  id              String          @id @default(cuid())
  name            String?
  description     String?
  logoUrl         String?
  banner          String?
  symbol          String?
  website         String?
  github          String?
  twitter         String?
  category        DAppCategory    @default(UNKNOWN)
  status          DAppStatus      @default(ACTIVE)
  detectionSource DetectionSource @default(AUTO)

  // GitHub source tracking
  githubId        String?         @unique // ID from GitHub protocols repo

  // Social metrics
  twitterFollowers String?        // Twitter/X followers count (e.g., "12 k", "2 552")

  // Quality scoring
  qualityScore    Float           @default(0) // Score de qualité (0-10)
  activityScore   Float           @default(0)
  diversityScore  Float           @default(0)
  ageScore        Float           @default(0)

  // Analytics
  totalTxCount    Int             @default(0)
  totalEventCount Int             @default(0)
  uniqueUsers     Int             @default(0)
  tvlUsd          Float           @default(0) // Total Value Locked in USD
  firstActivity   DateTime?
  lastActivity    DateTime?

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  contracts       Contract[]
  activities      Activity[]

  @@map("dapps")
}

// Contracts table
model Contract {
  id              String       @id @default(cuid())
  address         String       @unique
  bytecodeHash    String?
  type            ContractType @default(UNKNOWN)
  deploymentDate  DateTime?
  creatorAddress  String?
  transactionHash String?
  blockNumber     BigInt?

  // Metadata
  name            String?
  symbol          String?

  // Activity metrics
  eventCount      Int          @default(0) // Nombre d'événements émis
  txCount         Int          @default(0) // Nombre de transactions

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  dappId          String?
  dapp            DApp?        @relation(fields: [dappId], references: [id], onDelete: SetNull)

  @@index([address])
  @@index([dappId])
  @@index([deploymentDate])
  @@index([eventCount])
  @@map("contracts")
}

// Activity tracking table
model Activity {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  txCount     Int      @default(0)
  userCount   Int      @default(0)
  eventCount  Int      @default(0)
  gasUsed     BigInt   @default(0)
  createdAt   DateTime @default(now())

  // Relations
  dappId      String
  dapp        DApp     @relation(fields: [dappId], references: [id], onDelete: Cascade)

  @@unique([dappId, date])
  @@index([dappId])
  @@index([date])
  @@map("activities")
}

// Block scanning state
model BlockScanState {
  id             String   @id @default(cuid())
  lastBlockScanned BigInt @default(0)
  updatedAt      DateTime @updatedAt

  @@map("block_scan_state")
}

// Cache for protocol data
model ProtocolCache {
  id          String   @id @default(cuid())
  key         String   @unique // 'github_protocols_testnet' or 'github_protocols_mainnet'
  data        String   // JSON stringified data
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([key])
  @@index([expiresAt])
  @@map("protocol_cache")
}

// Cron job execution tracking
model CronJob {
  id          String   @id @default(cuid())
  name        String   @unique // 'sync_github_protocols', 'enrich_protocols'
  lastRun     DateTime?
  nextRun     DateTime?
  status      String   @default("idle") // 'idle', 'running', 'failed'
  error       String?
  runCount    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
  @@index([nextRun])
  @@map("cron_jobs")
}

// Monvision ecosystem dApps
model MonvisionDApp {
  id              String   @id @default(cuid())
  name            String
  description     String?
  logoUrl         String?
  category        String?  // Type du projet (Dex, Lending, LST, etc.)

  // Links
  website         String?
  twitter         String?
  discord         String?
  telegram        String?
  github          String?
  docs            String?
  detailsUrl      String?  // URL vers la page de détails sur Monvision

  // Social metrics
  twitterFollowers String?  // Twitter/X followers count (e.g., "12 k", "2 552")

  // Statistics
  accountsCount   Int      @default(0)
  transactionsCount BigInt @default(0)

  // Enrichment status
  isEnriched      Boolean  @default(false) // True if details have been fetched
  enrichedAt      DateTime? // When enrichment was completed

  // Relations
  contracts       MonvisionContract[]

  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
  @@index([category])
  @@index([accountsCount])
  @@index([transactionsCount])
  @@index([isEnriched])
  @@map("monvision_dapps")
}

// Contracts for Monvision dApps
model MonvisionContract {
  id              String   @id @default(cuid())
  address         String
  name            String?
  type            String?  // Type de contrat

  // Relations
  dappId          String
  dapp            MonvisionDApp @relation(fields: [dappId], references: [id], onDelete: Cascade)

  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([dappId, address]) // Un contrat ne peut être lié qu'une fois à une dApp
  @@index([address])
  @@index([dappId])
  @@map("monvision_contracts")
}
